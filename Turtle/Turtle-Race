from turtle import Turtle, Screen
import random

is_race_on = False
screen = Screen()
screen.setup(width=1000, height=800)
user_bet = screen.textinput(title="Make your bet", prompt="Options: red, green, blue, orange, coral, purple\nWhich turtle will win the race? Enter a color: ")

# create racers

colors = ["red", "green", "blue", "orange", "coral", "purple"]
y_cords = [380, 250, 120, -10, -140, -270]
turtles = []

random_color = random.choice(colors)

for i in range(6):
    tim = Turtle()
    tim.shape("turtle")
    tim.color(colors[i])
    tim.penup()
    tim.goto(x=-480, y=y_cords[i])
    turtles.append(tim)

if user_bet:
    is_race_on = True

while is_race_on:
    for turtle in turtles:
        if turtle.xcor() > 480:
            is_race_on = False
            winning_color = turtle.pencolor()
            if winning_color == user_bet:
                print(f"You win! The {winning_color} turtle is the winner!")
            else:
                print(f"You lose! The {winning_color} turtle is the winner!")

        rand_speed = random.randint(0, 15)
        turtle.forward(rand_speed)

screen.exitonclick()
