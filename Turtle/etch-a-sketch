from turtle import Turtle, Screen

tim = Turtle()
screen = Screen()
tim.shape("turtle")

def move_forwards():
    tim.forward(10)

def move_left():
    tim.left(10)

def move_right():
    tim.right(10)

def move_down():
    tim.backward(10)

def clear_screen():
    tim.clear()
    tim.penup()
    tim.home()
    tim.pendown()

screen.listen()
screen.onkey(move_forwards, key="w")
screen.onkey(move_right, key="d")
screen.onkey(move_down, key="s")
screen.onkey(move_left, key="a")
screen.onkey(clear_screen, key="c")
screen.exitonclick()
